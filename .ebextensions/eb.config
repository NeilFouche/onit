packages:
  yum:
    gcc: []
    mariadb105-devel: []
    pkgconf: []

files:
  # Django log file initialization
  "/var/log/django.log":
    mode: "0664"
    owner: webapp
    group: webapp
    content: "# Django log file initialized\n"

commands:
  01_create_pids_directory:
    command: "mkdir -p /var/pids"
  02_create_webgroup:
    command: "groupadd webgroup || true"  # Add group if it doesn't exist
  03_add_user_to_group:
    command: "usermod -aG webgroup ec2-user"
    ignoreErrors: true  # Ignore if the user already exists in the group
  04_add_user_to_group_webapp:
    command: "usermod -aG webgroup webapp"
    ignoreErrors: true  # Ignore if the user already exists in the group
  05_add_user_to_group_healthd:
    command: "usermod -aG webgroup healthd"
    ignoreErrors: true  # Ignore if the user already exists in the group
  06_chown_pids_directory:
    command: "chown :webgroup /var/pids"
    ignoreErrors: true
  07_chmod_pids_directory:
    command: "chmod 770 /var/pids"  # Allow full permissions for the group (webgroup)
  08_set_log_permissions:
    command: "chown webapp:webapp /var/log/django.log && chmod 0664 /var/log/django.log"
  09_chown_webservice:
    command: "chown ec2-user:ec2-user /etc/systemd/system/web.service"
    ignoreErrors: true
  10_chmod_webservice:
    command: "chmod 664 /etc/systemd/system/web.service"
    ignoreErrors: true
